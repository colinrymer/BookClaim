.well
  %form.form-search.span5(method="GET" action="/book_search")
    %input.search-query.input-medium{ type: 'text',
                                      placeholder: 'ISBN or Title',
                                      name: 'q',
                                      value: (query unless query.nil?) }
    %button.btn.btn-inverse(type="submit")
      Search
- unless books.nil?
  .well
    = partial(:'partials/book_partial', locals: { books: books, search: true, route: @route })